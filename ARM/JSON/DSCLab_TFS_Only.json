{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        }
    },
    "variables": {
        "adminUserName":"[parameters('adminUsername')]", 
        "adminPassword":"[parameters('adminPassword')]",
        "vnetId": "[resourceId(resourceGroup().Name,'Microsoft.Network/virtualNetworks', 'CoreVnet')]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/Subnet1')]"
    },
    "resources": [
        {
            "name": "tfs1nic1",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "Microsoft.Network/virtualNetworks/CoreVnet",
                "publictfs1IP"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "25.0.0.31",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'publictfs1IP')]"
                        }

                        }
                    }
                ]
            }
        },
        {
            "name": "tfs2nic1",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "Microsoft.Network/virtualNetworks/CoreVnet",
                "publictfs2IP"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "25.0.0.32",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'publictfs2IP')]"
                        }

                        }
                    }
                ]
            }
        },
        {
            "name": "tfs1",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "Microsoft.Network/networkInterfaces/tfs1nic1"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "tfs1",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[variables('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "Standard_A2_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'tfs1nic1')]"
                        }
                    ]
                },
                "licenseType": "Windows_Server"
            }
        },
        {
            "name": "tfs2",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "Microsoft.Network/networkInterfaces/tfs2nic1"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "tfs2",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[variables('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "Standard_A2_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'tfs2nic1')]"
                        }
                    ]
                },
                "licenseType": "Windows_Server"
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "tfs1/DSC.JoinAD",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', 'tfs1')]"
            ],
            "properties": {
              "publisher": "Microsoft.Powershell",
              "type": "DSC",
              "typeHandlerVersion": "2.19",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "ModulesUrl": "https://miblackibinaries.blob.core.usgovcloudapi.net/bin/CreateADPDC.zip",
                "ConfigurationFunction": "CreateADPDC.ps1\\JoinAD",
                "Properties": {
                  "DomainName": "domain.local",
                  "AdminCreds": {
                    "UserName": "[variables('adminUsername')]",
                    "Password": "PrivateSettingsRef:AdminPassword"
                  }
                }
              },
              "protectedSettings": {
                "Items": {
                  "AdminPassword": "[variables('adminPassword')]"
                }
              }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "tfs2/DSC.JoinAD",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', 'tfs2')]"
            ],
            "properties": {
              "publisher": "Microsoft.Powershell",
              "type": "DSC",
              "typeHandlerVersion": "2.19",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "ModulesUrl": "https://miblackibinaries.blob.core.usgovcloudapi.net/bin/CreateADPDC.zip",
                "ConfigurationFunction": "CreateADPDC.ps1\\JoinAD",
                "Properties": {
                  "DomainName": "domain.local",
                  "AdminCreds": {
                    "UserName": "[variables('adminUsername')]",
                    "Password": "PrivateSettingsRef:AdminPassword"
                  }
                }
              },
              "protectedSettings": {
                "Items": {
                  "AdminPassword": "[variables('adminPassword')]"
                }
              }
            }
        },
        {          
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "publictfs1IP",    
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            },
            "dependson":[]
        },
        {          
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "publictfs2IP",    
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            },
            "dependson":[]
        }
    ]
}